{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022", "ESNext"],
    "types": ["vite/client", "node"],
    "noEmit": true
  },
  "include": ["src", "vite.config.ts"]
}
