{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": [],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "dist", "packages/**/dist"],
  "references": []
}
